{
  "name": "ptcg-server",
  "version": "0.0.2",
  "description": "Server of the ptcg game.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "lint": "tslint {src/**/*.ts,src/*.ts}",
    "compile": "tsc && tsc -p tsconfig.dist.json",
    "build": "npm run lint && npm run test && npm run compile",
    "start": "node start.js",
    "start:dev": "nodemon -e ts --exec \"tsc && npm run start\"",
    "test": "nyc -e \".ts\" -x \"src/**/*.spec.ts\" jasmine-ts \"src/**/*.spec.ts\"",
    "coverage": "npm test && nyc report -r html"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@progress/pako-esm": "^1.0.1",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "jimp": "^0.16.1",
    "mysql": "^2.18.1",
    "nodemailer": "^6.6.5",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.2.0",
    "sqlite3": "^5.0.2",
    "typeorm": "^0.2.38"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/jasmine": "^2.8.17",
    "@types/node": "^12.12.54",
    "@types/nodemailer": "^6.4.0",
    "jasmine": "^3.9.0",
    "jasmine-ts": "~0.4.0",
    "nodemon": "^2.0.13",
    "nyc": "^15.1.0",
    "ts-node": "~7.0.0",
    "tslint": "^6.1.3",
    "typescript": "~4.3.5"
  },
  "nodemonConfig": {
    "ignore": [
      "coverage/*",
      "dist/*",
      "output/*",
      ".nyc_output/*"
    ],
    "delay": "2500",
    "watch": "src"
  }
}
